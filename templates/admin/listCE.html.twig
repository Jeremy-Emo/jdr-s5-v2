{% block content %}
    <div class="row">
        <div class="col ma-25-top">
            <a href="{{ path('adminCreateCE') }}"><button type="button" class="btn btn-primary">Créer un effet custom</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col ma-25-top">
            <div class="pa-20 bg-white">
                <h1 class="ma-20-bottom">Liste des effets personnalisés :</h1>
                <p class="ma-10-bottom">
                    <span>Nombre d'effets personnalisés : {{ customEffects|length }}</span>
                    <span class="f-right"><input type="text" id="searchBar"></span>
                </p>
                <table class="table" id="stupidTable">
                    <thead>
                    <tr>
                        <th scope="col" data-sort="string" class="cursor-click"><i class="fas fa-caret-down"></i> Nom</th>
                        <th scope="col" data-sort="int" class="cursor-click"><i class="fas fa-caret-down"></i> Valeur</th>
                        <th scope="col" data-sort="string" class="cursor-click"><i class="fas fa-caret-down"></i> ID to code</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ce in customEffects %}
                        <tr class="searchedItem" data-search="{{ ce.name|lower }}">
                            <td>{{ ce.name }}</td>
                            <td>{{ ce.value }}</td>
                            <td>{{ ce.nameId }}</td>
                            <td>
                                <a href="{{ path('admin_editCustomEffect', {'id': ce.id}) }}">Modifier</a>
                                {% if ce.skillsWithThis|length == 0 %}
                                    <br><a href="{{ path('admin_deleteCE', {'id': ce.id}) }}">Supprimer</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block moreJS %}
    {{ parent() }}
    {{ encore_entry_script_tags('searchBar') }}
{% endblock %}