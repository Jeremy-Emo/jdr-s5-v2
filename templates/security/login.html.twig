{% extends 'main/layout.html.twig' %}

{% block page_title %}{% trans from 'security.custom' %}connection{% endtrans %}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6 offset-md-3 center">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">{% trans from 'security.custom' %}connection{% endtrans %}</h1>
                <label for="inputUsername">{% trans from 'security.custom' %}user{% endtrans %}</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                <label for="inputPassword">{% trans from 'security.custom' %}password{% endtrans %}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary" type="submit">
                    {% trans from 'security.custom' %}connection_button{% endtrans %}
                </button>
            </form>
        </div>
    </div>
{% endblock %}
